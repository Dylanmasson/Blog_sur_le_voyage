<div class="container">
<div class="row">
    {% for article in articles %}
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    {% if article.image %}
                        <img class="card-img-top" src="{{ article.image }}">
                    {% endif %}
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.content|length > 35 ? article.content|slice(0, 35) ~ '...' : article.content|raw  }}</p>
                    <a href="{{ path("last_articles", {slug : article.slug}) }}" class="btn btn-primary">Voir l'article</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>