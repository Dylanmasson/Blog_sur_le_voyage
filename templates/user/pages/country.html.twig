{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="titles mt-5"> {{slug}} </h1>

    <div class="container mb-5">
        {% for country in countries %}
        {% if country.name == slug %}
        <div>
            <img class="image-continent" src="{{country.image}}" width="500px">
        </div>
        <div class="mt-5">
            <div>{{country.content}}</div>
        </div>
{% endif %}
        {% endfor %}
        {% include 'user/pages/articles.html.twig' %}

    </div>

{% endblock %}