{% extends 'base.html.twig' %}

{% block body %}


    <h1 class="titles mt-5"> {{user.username}} </h1>

    <div class="container">
        <div class="row mt-4">
            {% for article in articles %}
                <div class="col-sm-4 col-md-4 col-lg-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            {% if article.image %}
                                <img class="card-img-top" src="/uploads/images/{{ article.image }}">
                            {% endif %}
                            <h5 class="card-title">{{ article.title }}</h5>
                            <h5 class="card-title">{{ article.created_at|date("d/m/Y") }}</h5>
                            <a href="{{ path("article_user", {user: user.username, slug : article.slug}) }}" class="btn btn-primary">Voir</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>






{% endblock %}
