<div class="container">
<div class="row">
    {% for article in articles %}
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    {% if article.image %}
                        <div class = "row text-center">
                        </div>
                        <div class = "row">
                            <a href = "#" class = "column col-xs-6" id = "caption"><span class = "text"><h1>TITRE TAGS CATEGORIE</h1></span><img src = "{{ article.image }}"></a>
                            <div class = "frame col-xs-6">
                            </div>
                        </div>
                    {% endif %}
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.content|length > 35 ? article.content|slice(0, 35) ~ '...' : article.content|raw  }}</p>
                    <a href="{{ path("last_articles", {slug : article.slug}) }}" class="btn btn-primary">Voir l'article</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>



