{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">

    <h2 class="titres mt-3">Création d'un article</h2>

    {{ form_start(formArticle) }}

        <div class="row mt-3">
            <div class="col-8">
                {{ form_row(formArticle.title, {'attr': {'class': 'form-control', 'placeholder' : "Titre de l'article"}, 'label': 'Titre de l\'article'}) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-5">
                {{ form_row(formArticle.tags, {'attr': {'class': 'form-control', 'placeholder' : "Vos tags"}, 'label': 'Tags'}) }}
            </div>
            <div class="col-3">
                {{ form_row(formArticle.category, {'attr': {'class': 'form-control'}, 'label': 'Choisir la catégorie'}) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-4">
                {{ form_row(formArticle.country, {'attr': {'class': 'form-control'}, 'label': 'Choisir le pays'}) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-8">
                {{ form_row(formArticle.content, {'attr': {'class': 'form-control', 'placeholder': 'Contenu de l\'article'},  'label': 'Contenu de l\'article'}) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-8">
                {{ form_row(formArticle.image, {'attr': {'class': 'form-control-file', 'placeholder' : ' Inserez votre image'}, 'label_attr': {'class': 'mr-3'}, 'label': 'Image de l\'article'})
                }}
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-8"> <button type="submit" class="btn btn-info btn-block">Créer l'article</button></div>
        </div>

    {{ form_end(formArticle) }}

    </div>
{% endblock %}
