
{% block body %}
<div class="row">
    {% for article in articles %}
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    {% if article.image %}
                        <img class="card-img-top" src="{{ article.image }}">
                    {% endif %}
                    <h5 class="card-title">{{ article.title }}</h5>
                    <h5 class="card-title">{{ article.created_at|date("d/m/Y") }}</h5>
                    <a href="{{ path("article", {slug : article.slug}) }}" class="btn btn-primary">Voir</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}